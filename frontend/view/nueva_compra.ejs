<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./template/head") %>
        <title>Principal motors CA | Nueva compra</title>
        <link rel='stylesheet' href='./../static/css/nueva_venta.css'>
        <script>
            window.jQuery = window.$ = require('jquery');
        </script>
</head>

<body>
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h1>Abastecimiento de un producto</h1>
                    <br><br>
                </div>
                <form id="compra" enctype="multipart/form-data">

                    <div class="form-group">
                        <h2>Producto(s) abasteciendo</h2>
                    </div>

                    <!-- Opcional -->
                    <div class="form-group">
                        <select name="producto" id="producto" class="form-control" required>
                            <option value="0">Selecciona un producto</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <h2>Tipo de pago</h2>
                    </div>
                    <div class="form-group">
                        <select name="tipo_pago" id="tipo_pago" class="form-control" required>
                            <option value="0">Seleccione tipo de pago</option>
                            <option class='tipo_pago_option' value="pago_movil">Pago movil</option>
                            <option class='tipo_pago_option' value="punto">Punto</option>
                            <option class='tipo_pago_option' value="transferencia">Transferencia
                            </option>
                            <option class='tipo_pago_option' value="dolares">Dolares</option>
                        </select>
                    </div>

                    <!-- Factura generada -->

                    <div class="form-group">
                        <h2>Calculando el precio de la compra</h2>
                    </div>

                    <div class="factura">
                        <%- include("./template/factura_compra") %>
                    </div>

                    <!--End Factura generada -->

                    <button type="button" class="btn btn-primary" id="submit">Registrar compra</button>

                </form>
            </div>
        </div>
    </div>
    </div>

    <script type='text/javascript' src='./../static/lib/bootstrap/js/bootstrap.bundle.js'></script>
    <script type='text/javascript' src='./../static/js/compras/events_new_buy/variables.js'></script>
    <script type='text/javascript' src='./../static/js/compras/events_new_buy/funciones.js'></script>
    <script type='text/javascript' src='./../static/js/compras/nueva_compra.js'></script>
</body>

</html>