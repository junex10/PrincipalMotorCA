<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("./template/head") %>
    <title>Principal motors CA | Detalles de venta</title>
    <link rel='stylesheet' href='./../static/css/nueva_venta.css'>
    <script>
        window.jQuery = window.$ = require('jquery');
    </script>
</head>
<body>
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h1>Detalles de la venta</h1>
                    <br><br>
                </div>
                <form id="venta" enctype="multipart/form-data">

                    <div class="form-group">
                        <h2>Tipo de pago</h2>
                    </div>
                    <div class="form-group">
                        <input type='text' name="tipo_pago" id="tipo_pago" placeholder='Tipo de pago...' class="form-control" readonly>
                    </div>

                    <div class="form-group">
                        <h2>Impuesto(s)</h2>
                    </div>
                    <div class="form-group">
                        <input type='text' name="impuesto" id="impuesto" class="form-control" placeholder='Impuestos...' readonly>
                    </div>

                    <!-- Factura generada -->

                    <div class="form-group">
                        <h2>Productos</h2>
                    </div>

                    <div class="factura">
                        <%- include("./template/factura") %>
                    </div>

                    <!--End Factura generada -->

                </form>
            </div>
        </div>
    </div>
    <script type='text/javascript' src='./../static/lib/bootstrap/js/bootstrap.bundle.js'></script>
    <script type='text/javascript' src='./../static/js/ventas/events_new_sale/variables.js'></script>
    <script type='text/javascript' src='./../static/js/ventas/events_new_sale/funciones.js'></script>
    <script type='text/javascript' src='./../static/js/ventas/reportes/reportSalesDetail.js'></script>
</body>
</html>